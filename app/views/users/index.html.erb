<div class="container">
  <h3 class="heading text-center"><i class="fas fa-users"></i>ユーザー一覧</h3>
  <div class="row">
    <% @users.each do |user| %>
      <div class="col-lg-4 text-center">
        <%= link_to user_path(user) do %>
          <p class="caption h5"><%= user.user_name %></p>
          <%= image_tag user.image.variant(resize: '200x200'), class: 'post-image' if user.image.attached? %>
          <p class="caption"><%= "#{user.posts.count} 投稿" %></p>
        <% end %>
      </div>
    <% end %>
  </div>
  <%= paginate @users %>
  </div>
</div>

