<div class="container">
  <div class="row">
    <div class="col-xs-12 mt-3">
　　  <h4><i class="fas fa-users"></i>ユーザー一覧</h4>
　　</div>
　</div>
  <% @users.each do |user| %>
    <div class="row justify-content-center">
      <div class=col-lg-12>
        <%= link_to user_path(user) do %>
          <p class="caption h5"><%= user.user_name %></p>
          <p class="caption"><%= "#{user.posts.count} 投稿" %></p>
        <% end %>
      </div>
    </div>
  <% end %>
    <%= paginate @users %>
  </div>
</div>

