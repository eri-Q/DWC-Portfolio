<%= render 'layouts/header' %>

<h1>詳細ページ</h1>
<%= image_tag @post.image.variant(resize: '500x500'), class: 'post-image' if @post.image.attached? %>
<%= @post.title %>
<%= @post.body %></br>

<% if @post.user == current_user %>
  <%= link_to "編集", edit_post_path(@post), class: "btn btn-success mb-4" %>

  <%= link_to "削除", post_path(@post), method: :delete, class: "btn-sm btn-danger" %>
<% end %>

<div id="favorite_btn_<%= @post.id %>">
  <%= render 'favorites/favorite', post: @post %>
</div>

<div id="comment_btn_<%= @post.id %>">
  <%= render 'comments/comment', post: @post, comment: @comment, comments: @comments %>
</div>

<%= render 'layouts/footer' %>


