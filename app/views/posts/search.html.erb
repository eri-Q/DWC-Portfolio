<% if @posts == [] %>
<h2 class = "seach-result">検索結果はありません</h2>
<% else %>
<div class="container">
  <h3 class="heading text-center">検索結果</h3>
  <div class="row">
    <% @posts.each do |post| %>
    <div class="col-lg-4 text-center">
      <%= link_to post_path(post.id) do %>
      <%= image_tag post.image.variant(resize: '300x300'), class: 'post-image' if post.image.attached? %></br>
      <p class="caption"><%= post.title %></p>
      <p class="caption">〜クリックして詳細を見る〜</p>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
<% end %>