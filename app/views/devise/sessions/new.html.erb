<div class="container my-5">
  <div class="row">
    <div class="col">
      <div class="col-6 offset-3">
        <h4><i class="fas fa-sign-in-alt"></i>ログイン</h4>
        <h6 class="my-3 font-weight-bold">会員の方はこちらからログイン</h6>
        <%= form_with model:@user, url: user_session_path, local:true do |f| %>
          <div class="field my-2">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field my-2">
            <%= f.label :パスワード %><br />
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field my-2">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>

          <div class="actions my-3">
            <%= f.submit "Log in", class: "btn btn-outline-success"%>
          </div>
        <% end %>
        <div>
          <h6 class="font-weight-bold">会員登録がお済みでない方</h6>
          <p class="col-xs-offset"><%= link_to "こちら", new_user_registration_path %>から登録してください。</p>
        </div>
      </div>
    </div>
  </div>
</div>
