<h2>新規登録</h2>

<%= form_with model:@user, url: user_registration_path, local:true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <table>
    <tbody>
      <tr>
        <th>ユーザーネーム/企業・ブランド</th>
        <td><%= f.text_field :user_name, autofocus: true %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>
      <tr>
        <th>パスワード</th>
        <td>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </td>
      </tr>
      <tr>
        <th>パスワード確認用</th>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= f.text_field :telephone_number, autofocus: true %></td>
      </tr>
      <tr>
        <th>プロフィール画像</th>
        <td><%= f.file_field :image %></td>
      </tr>
    </tbody>
  </table>
  <br>
  <div class="actions">
    <%= f.submit "新規登録", class:"btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
