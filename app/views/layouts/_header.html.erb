<% if user_signed_in? %>
<header class="sticky-top cover-container d-flex w-100 h-100 p-3 max-auto flex-column">
  <nav class="navbar navbar-expand-md">
    <div class="container-fluid">
      <div class="navbar-brand"><%= link_to root_path do %><h1 class="text-white">Eco Share</h1><% end %></div>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#responsiveMenu" aria-controls="responsiveMenu" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse justify-content-end" id="responsiveMenu">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item active ">
            <a class="nav-link "><%= link_to "トップ", root_path, class: "text-white" %></a>
          </li>
          <li class="nav-item">
            <a class="nav-link "><%= link_to "投稿する", new_post_path, class: "text-white" %></a>
          </li>
          <li class="nav-item">
            <a class="nav-link "><%= link_to "投稿一覧", posts_path, class: "text-white" %></a>
          </li>
          <li class="nav-item">
              <a class="nav-link "><%= link_to "ユーザー一覧", users_path, class: "text-white" %></a>
          </li>
          <li class="nav-item">
              <a class="nav-link "><%= link_to "マイページ", user_path(current_user.id), class: "text-white" %></a>
          </li>
          <li class="nav-item">
              <a class="nav-link"><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "text-white" %></a>
          </li>
          <li class="nav-item nav nav-masthead ">
            <%= form_with url: search_posts_path, method: :get, local: true do |f| %>
              <%= f.text_field :search, placeholder: "投稿を検索する" %>
              <%= f.submit '検索する', name: nil %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>
<% else %>
<header class="cover-container d-flex w-100 h-100 p-3 max-auto flex-column">
  <nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
      <div class="navbar-brand"><%= link_to root_path do %><img src="/assets/header.png" alt="logo" id="logo"><% end %></div>
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav nav-masthead justify-content-end"><%= link_to "新規登録", new_user_registration_path, class: "text-white"%></a>
        </li>
        <li class="nav-item">
          <a class="nav nav-masthead justify-content-end"><%= link_to "ログイン", new_user_session_path, class: "text-white" %></a>
        </li>
      </ul>
    </div>
  </nav>
</header>
<% end %>

